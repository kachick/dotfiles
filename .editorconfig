root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[{Makefile,*.mk,*.go,.gitmodules,*.*sh,.*shrc,*shenv,.bash_*,*.envrc}]
indent_style = tab
indent_size = 4

# https://github.com/PowerShell/PowerShell/blob/a46843de2119203dc9c8db258138450d4a847c12/.editorconfig
[*.{ps1,psd1,psm1}]
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = true
