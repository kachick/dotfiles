{
  "editor.defaultFormatter": "dprint.dprint",
  "editor.formatOnSave": true,
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[kanata]": {
    "editor.defaultFormatter": "rszyma.vscode-kanata"
  },
  "[github-actions-workflow]": {
    // vscode itself or something often sets this to redhat.vscode-yaml by default
    // it seems annoy and hard to debug. So ensure to use dprint with this config
    // See also https://github.com/kachick/times_kachick/issues/257
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[yaml]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "nix.serverPath": "nixd",
  "nix.enableLanguageServer": true,
  "gopls": {
    "build.buildFlags": ["-tags=linux,windows,darwin"]
  },
  "shellformat.useEditorConfig": true,
  "shellcheck.ignorePatterns": {
    "dependencies/**": true,
    "config/ghostty/config*": true
  },
  "search.exclude": {
    ".direnv/**": true,
    "dependencies/*sh/": true
  },
  "rumdl.configPath": ".rumdl.toml",
  "rumdl.server.path": "rumdl"
}
