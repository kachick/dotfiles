// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Iceberg",
  "telemetry": {
    "metrics": false
  },
  "auto_update": false,
  "soft_wrap": "editor_width",
  "ui_font_family": "PlemolJP Console NF",
  "ui_font_size": 16,
  "buffer_font_family": "PlemolJP Console NF",
  "buffer_font_size": 16,
  "tabs": {
    "file_icons": true
  },
  "lsp": {
    "vscode-json-language-server": {
      "binary": {
        "path": "/run/current-system/sw/bin/vscode-json-language-server",
        "arguments": ["--stdio"]
      }
    }
  },
  "languages": {
    "JSON": {
      // See GH-781 and GH-809 for detail
      "language_servers": ["vscode-json-language-server"]
    },
    "JSONC": {
      // See GH-781 and GH-809 for detail
      "language_servers": ["vscode-json-language-server"]
    }
  },
  "auto_install_extensions": {
    "nix": true,
    "toml": true,
    "typos": true,
    "ruby": true,
    "lua": true,
    "kdl": true,
    "basher": true,
    "powershell": true,
    "fish": true,
    "base16": true,
    "iceberg": true
  }
}
